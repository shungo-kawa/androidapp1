    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/status_label"
        android:layout_toLeftOf="@+id/pulldata"
        android:layout_toStartOf="@+id/pulldata"
        android:text="開始" />

    <Button
        android:id="@+id/deleteAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/status_label"
        android:layout_toEndOf="@+id/pulldata"
        android:layout_toRightOf="@+id/pulldata"
        android:text="削除" />

    <Button
        android:id="@+id/pulldata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/status_label"
        android:layout_centerHorizontal="true"
        android:text="保存" />

    <TextView
        android:id="@+id/status_label"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_above="@+id/connect_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="@string/not_connected"
        android:textColor="@android:color/white"
        android:textSize="10sp" />

    <Button
        android:id="@+id/connect_button"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/connect_button" />


